@page
@model BasicCrud.Pages.Users.ListModel
@{
    ViewData["Title"] = "List";
}

<h2>List</h2>

@if (Model.Message != null) {
<div class="alert alert-info">@Model.Message</div>
}

<div>
    <div>
        <form method="get">
        <div>
            <input type="text" asp-for="SearchTerm" class="form-control"/>
            <input type="submit" value="Search" class="btb btn-primary"/>
        </div>
        </form>
    </div>
    <table class="table">
        <thead>

        </thead>
        <tbody>
            @foreach (var user in Model.users)
            {
                <tr>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.Age</td>
                    <td>@user.Location</td>
                    <td><a asp-page="Detail" asp-route-userId="@user.Id">View Details</a></td>
                    <td><a asp-page="Edit" asp-route-userId="@user.Id">Edit Details</a></td>
                    <td><a asp-page="Delete" asp-route-userId="@user.Id">Delete Details</a></td>
                </tr>
            }

        </tbody>
    </table>

    <a asp-page="Edit" class="btn btn-primary">Create User</a>
</div>


