@using BasicCrud.core.Models
@model User


<div class="panel panel-default">
    <div class="panel-heading">@Model.Name</div>
    <div class="panel-body">
        <div>Location: @Model.Location</div>
        <div>Age: @Model.Age</div>
        <div>Email: @Model.Email</div>
    </div>
    <div class="panel-footer">
        <a asp-page="Detail" asp-route-userId="@Model.Id">View Details</a>
        <a asp-page="Edit" asp-route-userId="@Model.Id">Edit Details</a>
        <a asp-page="Delete" asp-route-userId="@Model.Id">Delete Details</a>
    </div>
</div>